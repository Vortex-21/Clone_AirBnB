<%layout("/layouts/boilerplate.ejs") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Edit Your Listing</h3>

      <form
        method="POST"
        action="/listings/edit/<%=listing._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label">Enter new title</label>
          <input
            type="text"
            id="title"
            class="title form-control"
            name="listing[title]"
            value="<%=listing.title%>"
            required
          />

          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please fill out this field!</div>
          <br /><br />
        </div>

        <div>
          <label for="description" class="form-label"
            >Enter new description</label
          >
          <textarea
            id="description"
            class="form-control"
            name="listing[description]"
            required
          >
<%=listing.description%></textarea
          >
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please fill out this field!</div>
          <br /><br />
        </div>

        <div>
          <label for="imageURL" class="form-label">Enter new image</label>
          <input
            type="file"
            id="imageURL"
            class="imageURL form-control"
            name="listing[image]"
            
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please add an Image!</div>
          <br>
          <img src=<%=originalImageUrl%> alt="">
          <br /><br />
        </div>

        <div class="row">
          <div class="col-md-4">
            <div>
              <label for="price" class="form-label">Enter price</label>
              <input
                type="number"
                id="price"
                class="price form-control"
                name="listing[price]"
                value="<%=listing.price%>"
                required
              />
              <div class="valid-feedback">Looks Good!</div>
              <div class="invalid-feedback">Please fill out this field!</div>
              <br /><br />
            </div>
          </div>

          <div class="col-md-8">
            <div>
              <label for="country" class="form-label">Enter country</label>
              <input
                type="text"
                id="country"
                class="country form-control"
                name="listing[country]"
                value="<%= listing.country %>"
                required
              />
              <div class="valid-feedback">Looks Good!</div>
              <div class="invalid-feedback">Please fill out this field!</div>
              <br /><br />
            </div>
          </div>
        </div>

        <div>
          <label for="location" class="form-label">Enter location</label>
          <input
            type="text"
            id="location"
            class="location form-control"
            name="listing[location]"
            value="<%= listing.location %>"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please fill out this field!</div>
          <br /><br />
        </div>

        <button class="btn btn-dark edit-btn">Submit</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
