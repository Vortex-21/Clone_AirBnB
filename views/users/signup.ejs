<%layout("/layouts/boilerplate.ejs")-%>
<body>
    <div class="row">
        <h1 class="col-6 offset-3">Sign up on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mt-4">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="currUser[username]" id="username" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill out this field!
                    </div>
                </div>
                <div class="mt-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="currUser[email]" id="email" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill out this field!
                    </div>
                </div>
                <div class="mt-2">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="currUser[password]" id="password" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill out this field!
                    </div>
                </div>
                <button class="btn btn-outline-dark mt-3">
                    Submit
                </button>
            </form>
        </div>
    </div>
</body>